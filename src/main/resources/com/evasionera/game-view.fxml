            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.evasionera.controllers.GameController"
            prefHeight="720.0" prefWidth="1280.0">

    <ImageView fx:id="playerImageView" fitWidth="50.0" fitHeight="50.0"
               preserveRatio="true" pickOnBounds="true" image="@../../images/player.png"/>
    <ImageView fx:id="ghostImageView" fitWidth="50.0" fitHeight="50.0"
               preserveRatio="true" pickOnBounds="true" image="@../../images/ghost.png"/>
