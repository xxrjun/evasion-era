            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>
        <effect>
            <DropShadow />
        </effect>
    </VBox>
    <Button layoutX="488.0" layoutY="639.0" onAction="#switchToHomeView" prefHeight="53.0" prefWidth="243.0" styleClass="small-button" text="Back to Home" />
